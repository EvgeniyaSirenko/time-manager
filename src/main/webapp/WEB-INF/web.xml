<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
	version="4.0">

	<welcome-file-list>
		<welcome-file>login.jsp</welcome-file>
	</welcome-file-list>

	<context-param>
		<param-name>javax.servlet.jsp.jstl.fmt.localizationContext</param-name>
		<param-value>resources</param-value>
	</context-param>

	<context-param>
		<param-name>javax.servlet.jsp.jstl.fmt.locale</param-name>
		<param-value>en</param-value>
	</context-param>

	<context-param>
		<param-name>locales</param-name>
		<param-value>/WEB-INF/locales.properties</param-value>
	</context-param>
	
<!-- supported locales
  <context-param>
    <param-name>locales</param-name>
    <param-value>ru en</param-value>
  </context-param>
 -->
 
 	<filter>
		<filter-name>EncodingFilter</filter-name>
		<filter-class>com.epam.web.filter.EncodingFilter</filter-class>
		<init-param>
			<param-name>encoding</param-name>
			<param-value>UTF-8</param-value>
		</init-param>
	</filter>
	
	<filter-mapping>
		<filter-name>EncodingFilter</filter-name>
		<url-pattern>/*</url-pattern>
		<servlet-name>Controller</servlet-name>
	</filter-mapping>
	
	<filter>
		<filter-name>CommandAccessFilter</filter-name>
		<filter-class>com.epam.web.filter.CommandAccessFilter</filter-class>
		<init-param>
			<param-name>admin</param-name>
			<param-value>adminMainPage activitiesToApprove activitiesToDelete approveActivity rejectApproveActivity deleteParticipantsActivity rejectDeleteParticipantsActivity createCategory adminCreateNewActivity adminSaveCreatedActivity categories deleteCategory updateCategory saveUpdatedCategory activities deleteActivity updateActivity saveUpdatedActivity participants deleteParticipant reports reportsSortActivities reportsSortActivitiesByCategory reportsSortActivitiesByParticipantsQuantity reportsFilterActivities reportsFilterActivitiesByCategory</param-value>
		</init-param>
		<init-param>
			<param-name>client</param-name>
			<param-value>participantMainPage participantAccount participantActivities participantUpdateAccount participantChooseNewActivity participantAddActivity addActivityDuration participantDeleteActivity</param-value>
		</init-param>
		<init-param>
			<param-name>common</param-name>
			<param-value>logout</param-value>
		</init-param>
		<init-param>
			<param-name>out-of-control</param-name>
			<param-value>login registration</param-value>
		</init-param>
	</filter>
	
	<filter-mapping>
		<filter-name>CommandAccessFilter</filter-name>
		<servlet-name>Controller</servlet-name>
	</filter-mapping>
 
	<listener>
		<listener-class>com.epam.web.listener.ContextListener</listener-class>
	</listener>
	
	<error-page>
		<exception-type>java.lang.Throwable</exception-type>
		<location>/error.jsp</location>
	</error-page>
	
	<error-page>
		<error-code>404</error-code>
		<location>/error.jsp</location>
	</error-page>

</web-app>